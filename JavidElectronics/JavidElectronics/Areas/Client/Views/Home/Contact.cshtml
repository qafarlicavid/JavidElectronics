@model Contact

<!--contact map start-->
<div class="contact_map mt-60">
    <div class="map-area">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.4286744962415!2d49.851756815354676!3d40.37719087936969!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sen!2saz!4v1677783124816!5m2!1sen!2saz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>
<!--contact map end-->
<!--contact area start-->
<div class="contact_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="contact_message content">
                    <h3>contact us</h3>
                    <p>
                        Javid Electronics - Elektronika mallarinin satishi. Azerbaycanda Nomre 2
                    </p>
                    <ul>
                        <li><i class="fa fa-fax"></i> Address : Baku Azerbaijan.</li>
                        <li>
                            <i class="fa fa-envelope"> </i> Email: <a href="mailto:demo@example.com">cavid.qafarli@gmail.com </a>
                        </li>
                        <li><i class="fa fa-phone"></i> Phone:<a href="tel: 0123456789"> +994 70 523 85 02 </a> </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="contact_message form">
                    <h3>Tell us your project</h3>
                    <form asp-controller="home" asp-action="contact" method="POST" id="contact-form">
                        <p>
                            <label> Your Name (required)</label>
                            <input asp-for="Name" name="name" placeholder="Name *" type="text">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </p>
                        <p>
                            <label> Your Email (required)</label>
                            <input asp-for="Email" name="email" placeholder="Email *" type="email">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </p>
                        <p>
                            <label> Phone</label>
                            <input asp-for="Phone" name="phone" placeholder="Phone *">
                            <span asp-validation-for="Phone" class="text-danger"></span>

                        </p>
                        <p>
                            <label> Your Message</label>
                            <input asp-for="Message" name="message" placeholder="Message *" type="text">
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </p>

                        <button type="submit"> Send</button>
                        <p class="form-messege"></p>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!--contact area end-->