@using JavidElectronics.Database.Models
@model List<Navbar>


<div class="header-main-nav">
    <div class="container">
        <nav>
            <ul>
                @foreach (var navItem in Model)
                {
                    @if (navItem.subNavbars.Count == 0)
                    {
                        <li id="top-menu">
                            <a asp-route="@navItem.ToURL" class="navbarname">@navItem.Name</a>
                        </li>
                    }
                    else
                    {

                        <li id="top-menu">
                            <a asp-route="@navItem.ToURL" class="navbarname"><i class="fa-solid fa-chevron-down"></i> @navItem.Name </a>

                            <ul id="drop-menu">
                                @foreach (var subNav in navItem.subNavbars)
                                {
                                    <li><a asp-route="@subNav.ToURL">@subNav.Name</a></li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>
