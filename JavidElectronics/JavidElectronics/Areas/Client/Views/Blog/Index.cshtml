@using JavidElectronics.Areas.Client.ViewComponents
@using JavidElectronics.Areas.Client.ViewModels.Blog
@model ListViewModel


<!--blog area start-->
<div class="blog_page_section m-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="blog_wrapper">
                    <div class="blog_header">
                        <h1>Blog</h1>
                    </div>
                    <div class="row">
                        @foreach (var blog in Model.Blogs)
                        {
                            <div class="col-lg-6 col-md-6">
                                <article class="single_blog mb-60">
                                    <figure>
                                        <div class="blog_thumb">
                                            <a><img src="~/@blog.MainImageUrl" alt="Blog Images"></a>
                                        </div>
                                        <figcaption class="blog_content">
                                            <h3><a href="blog-details.html">@blog.Name</a></h3>
                                            <div class="blog_meta">
                                                <span class="author">Posted by : <a href="#">@blog.AdminName</a> / </span>
                                                <span class="post_date">On : <a href="#">@blog.CreatedAt</a></span>
                                            </div>
                                            <div class="blog_desc">
                                                <p>
                                                    @blog.Content
                                                </p>
                                            </div>
                                            <div class="blog_meta">
                                                <span class="author">
                                                    Category :
                                                    @*@foreach (var category in Model.Categories)
                                                    {
                                                        <a href="#">@category.Title; </a>
                                                    }*@

                                                </span>
                                                <span class="author">
                                                    Tag :
                                                    @foreach (var tag in Model.Tags)
                                                    {
                                                        <a href="#">@tag.Title; </a>
                                                    }
                                                </span>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="blog_sidebar_widget">
                    <div class="widget_list widget_search">
                        <h3>Search</h3>
                        <form action="#">
                            <input placeholder="Search..." type="text">
                            <button type="submit">search</button>
                        </form>
                    </div>

                    <div class="widget_list widget_post">
                        <h3>Recent Posts</h3>
                        <div class="post_wrapper">
                            <div class="post_thumb">
                                <a href="blog-details.html"><img src="assets/images/blog/blog12.jpg" alt=""></a>
                            </div>
                            <div class="post_info">
                                <h3><a href="blog-details.html">Blog image post</a></h3>
                                <span>March 16, 2022 </span>
                            </div>
                        </div>
                        <div class="post_wrapper">
                            <div class="post_thumb">
                                <a href="blog-details.html"><img src="assets/images/blog/blog13.jpg" alt=""></a>
                            </div>
                            <div class="post_info">
                                <h3><a href="blog-details.html">Post with Gallery</a></h3>
                                <span>March 16, 2022 </span>
                            </div>
                        </div>
                        <div class="post_wrapper">
                            <div class="post_thumb">
                                <a href="blog-details.html"><img src="assets/images/blog/blog14.jpg" alt=""></a>
                            </div>
                            <div class="post_info">
                                <h3><a href="blog-details.html">Post with Audio</a></h3>
                                <span>March 16, 2022 </span>
                            </div>
                        </div>
                        <div class="post_wrapper">
                            <div class="post_thumb">
                                <a href="blog-details.html"><img src="assets/images/blog/blog15.jpg" alt=""></a>
                            </div>
                            <div class="post_info">
                                <h3><a href="blog-details.html">Post with Video</a></h3>
                                <span>March 16, 2022 </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget_list widget_categories"> 
                        <h3>Archives</h3>
                        <ul>
                            <li><a href="#">April 2022</a></li>
                        </ul>
                    </div>
                    <div class="widget_list widget_categories">
                        <h3>Categories</h3>
                        <ul>
                            <li><a href="#">Audio</a></li>
                            <li><a href="#">Company</a></li>
                            <li><a href="#">Gallery</a></li>
                            <li><a href="#">Image</a></li>
                            <li><a href="#">Other</a></li>
                            <li><a href="#">Travel</a></li>
                            <li><a href="#">Uncategorized</a></li>
                            <li><a href="#">Video</a></li>
                            <li><a href="#">Wordpress</a></li>
                        </ul>
                    </div>
                    <div class="widget_list widget_tag">
                        <h3>Tag products</h3>
                        <div class="tag_widget">
                            <ul>
                                <li><a href="#">asian</a></li>
                                <li><a href="#">brown</a></li>
                                <li><a href="#">euro</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--blog area end-->